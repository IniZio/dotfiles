// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "context_servers": {
  },
  "ssh_connections": [
    {
      "host": "p-formx-sino-invoice",
      "username": "newman",
      "args": [],
      "projects": [
        {
          "paths": [
            "/home/newman"
          ]
        }
      ]
    }
  ],
  "icon_theme": "Catppuccin Latte",
  "agent": {
    "default_model": {
      "provider": "zed.dev",
      "model": "grok-code-fast-1"
    },
    "model_parameters": []
  },
  "inlay_hints": {
    "enabled": true,
    "show_value_hints": true,
    "show_type_hints": true,
    "show_parameter_hints": true,
    "show_other_hints": true,
    "show_background": false,
    "edit_debounce_ms": 700,
    "scroll_debounce_ms": 50,
    "toggle_on_modifiers_press": {
      "control": false, "alt": false,
      "shift": false,
      "platform": false,
      "function": false
    }
  },
  "confirm_quit": true,
  "use_smartcase_search": true,
  "minimap": {
    "show": "never",
    "thumb": "always"
  },
  "file_types": {
    "helm": [
      "templates/*.yaml"
    ],
    "postcss": [
      "*.css"
    ],
    "json": [
      "*.json",
      ".djlintrc"
    ],
    "javascript": [
      "*.gs"
    ],
    "html": [
      "*.mako",
      "*.html"
    ]
  },
  "show_edit_predictions": true,
  "ensure_final_newline_on_save": true,
  "indent_guides": {
    "enabled": false,
    "line_width": 0,
    "active_line_width": 0,
    "coloring": "fixed",
    "background_coloring": "disabled"
  },
  "soft_wrap": "none",
  "tab_size": 2,
  "base_keymap": "VSCode",
  "terminal": {
    "env": {
      "COMPOSE_BAKE": "true"
    },
    "font_family": ".ZedMono"
  },
  "telemetry": {
    "metrics": false,
    "diagnostics": false
  },
  "vim_mode": false,
  "ui_font_size": 13.0,
  "buffer_font_size": 10.0,
  "theme": {
    "mode": "system",
    "light": "Catppuccin Latte",
    "dark": "One Dark"
  },
  "project_panel": {
    "entry_spacing": "standard",
    "indent_size": 10,
    "indent_guides": {
      "show": "never"
    }
  },
  "format_on_save": "off",
  "languages": {
    "Kotlin": {
      "enable_language_server": true,
    }
  }
}
