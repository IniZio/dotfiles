{
    "window.menuBarVisibility": "toggle",
    "workbench.activityBar.visible": false,
    "workbench.startupEditor": "newUntitledFile",
    "workbench.statusBar.visible": false,
    "editor.fontSize": 17,
    "editor.fontFamily": "'Fira Code', Input, 'Droid Sans Mono', 'Courier New', monospace, 'Droid Sans Fallback'",
    "editor.tabSize": 2,
    "files.exclude": {
        "**/.git": true,
        "**/node_modules": true,
        "**/bower_modules": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true
    },
    "editor.minimap.enabled": false
}